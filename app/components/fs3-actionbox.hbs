<div class="fs3-abilitybox"> 
  <div class="fs3-ability-row">
    <div class="fs3-ability-name">
      {{yield}}
    </div>

    <div class="fs3-rating-control">
      <button class="fs3-skillbutton" {{on 'click' this.decrement}}>-</button>

      <div class="fs3-rating-display">
        <Fs3Dots @rating={{this.rating}} @max={{8}} />
        <br>
        {{this.ratingName}}
      </div>

      <button class="fs3-skillbutton" {{on 'click' this.increment}}>+</button>
    </div>
  </div>
    
  

  {{#if this.specialties}}
    <div class="fs3-specialty-select">

      <div class="cg-tip">Specialty is optional, costs 1 AP, and confers a +1 bonus on related rolls.</div>
       
        {{#each this.specialties as |spec|}}
      
            <span class="text">&nbsp; {{spec.name}}:</span>
            <Input @type="checkbox" @checked={{spec.selected}} /> 
        {{/each}}
    </div>
  {{/if}}
  
</div>
