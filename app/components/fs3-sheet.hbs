<div class="row">
  <div class="col col-md-6 col-sm-12">

    <Fs3AbilityTable @title="Attributes" @list={{this.char.fs3.attributes}} @max={{4}} @showSpecs={{false}} />
    
  </div>
  
  <div class="col col-md-6 col-sm-12">
  
    <Fs3AbilityTable @title="Action Skills" @list={{this.char.fs3.action_skills}} @max={{8}} @showSpecs={{true}} />
  
  </div>
</div>

<div class="row">
  <div class="col col-md-6 col-sm-12">
    <Fs3AbilityTable @title="Background Skills" @list={{this.char.fs3.backgrounds}} @max={{3}} />  
  </div>

</div>

{{#if this.char.fs3.use_advantages}}

    <Fs3AbilityTable @title="Advantages" @list={{this.char.fs3.advantages}} @max={{3}} @abilityType="advantage" />  

{{/if}}

<div class="fs3-luck">
  <b>Luck Points:</b> {{this.char.fs3.luck_points}}
</div>

