{{this.updatePoseOrder}}<div class="scene-pose-order">
<label>Pose Order:</label> 

{{#if (eq this.poseOrderType 'normal') }}
<TooltipButton @onClick={{(fn this.switchPoseOrderType '3-per')}} @position="right" @message="Regular Order, click to switch to 3-Per" @icon="fa fa-user" />
{{else}}
<TooltipIcon @position="left" @message="3-Per Order" @icon="fa fa-users" />
{{/if}}

{{#each this.poseOrder as |po|}}
{{#if (eq po.name this.playerName)}}
  <span class="your-pose-order">{{po.name}}</span>
{{else}}
  {{po.name}}
{{/if}}
<span class="hint">{{po.timeString}}</span>
{{/each}}
</div> 
