<div class="tds-damage-list">
{{#each this.damage as |damage|}}


<div class="tds-damage-block">
  
  <div class="row">
    <div class="col col-xs-12 col-sm-4">  <div class="tds-damage-title">{{damage.description}}</div> </div>
    <div class="col col-xs-12 col-sm-4">{{damage.date}}</div>
    <div class="col col-xs-12 col-sm-4">
      
      {{#if this.showOriginal}}
        <AnsiFormat @text={{damage.original_severity}} /> 
        ( now <AnsiFormat @text={{damage.severity}} />)
      {{else}}
        <AnsiFormat @text={{damage.severity}} /> 
      {{/if}}
    </div>
  </div>
</div>
{{/each}}
</div>

<p><b>Total Damage Modifier:</b> {{this.damageMod}}</p>
