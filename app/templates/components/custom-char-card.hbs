<div class="scene-card">
  <div class="row">
    <div class="col col-4 col-xs-12 scene-card-profile">
      <CharCardProfile @char={{this.char}} />
    </div>
    <div class="col col-8 col-xs-12 scene-card-demographics">
      <CharCardDemo @char={{this.char}} />
       
    </div>
  </div>

{{#if (not this.char.is_ooc)}}
  <hr>    

  <ul class="nav nav-tabs" role="tablist">
    {{#if this.char.description}}
      <li class="nav-item"><a data-bs-toggle="tab" class="nav-link active" href="#description">Description</a></li>
    {{/if}}

    {{#if this.char.tds}}
      <li class="nav-item"><a data-bs-toggle="tab" class="nav-link" href="#tdsabiliites">Abilities</a></li>
    {{/if}}    
    
    <CharCardCustomTabs @char={{this.char}} />
  </ul>

  <div class="tab-content">
    {{#if this.char.description}}
      <div id="description" class="tab-pane fade show active">
        <AnsiFormat @text={{this.char.description}} />
      </div>
    {{/if}}

    {{#if this.char.tds}}
      <div id="tdsabiliites" class="tab-pane fade show">
        <CharCardTdS @char={{this.char}} />
      </div>
    {{/if}}
    
    <CharCardCustomTabsContent @char={{this.char}} />
  </div>
{{/if}}
</div>