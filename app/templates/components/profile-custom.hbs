{{flash-messages}}

{{#each this.char.custom.comps.comps as |comp|}}
<div class="comp">
 <p class="comp-msg"><AnsiFormat @text={{comp.msg}} /></p>
 <p class="comp-from">From {{comp.from}} on {{comp.date}}</p></div>
{{/each}}


{{#each this.char.custom.comps.pages as |pg|}}
{{#if (eq pg this.page)}}
<button class="btn btn-primary" {{action "goToPage" pg}}>{{pg}}</button>
{{else}}
<button class="btn btn-secondary" {{action "goToPage" pg}}>{{pg}}</button>
{{/if}}
{{/each}}